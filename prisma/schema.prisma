generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Course {
  id        String     @id @default(cuid())
  mainTopic String
  userId    String
  status    String     @default("generating")
  subtopics Subtopic[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  @@index([userId])
}

model Subtopic {
  id             String          @id @default(cuid())
  courseId       String
  course         Course          @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title          String
  description    String          @db.Text
  difficulty     String
  introduction   String          @db.Text
  summary        String          @db.Text
  commonMistakes String          @db.Text
  concepts       Concept[]
  videos         YoutubeVideo[]
  articles       Article[]
  quizzes        Quiz[]
  createdAt      DateTime        @default(now())

  @@index([courseId])
}

model Concept {
  id         String   @id @default(cuid())
  subtopicId String
  subtopic   Subtopic @relation(fields: [subtopicId], references: [id], onDelete: Cascade)
  concept    String
  explanation String  @db.Text
  example    String   @db.Text

  @@index([subtopicId])
}

model YoutubeVideo {
  id           String   @id @default(cuid())
  subtopicId   String
  subtopic     Subtopic @relation(fields: [subtopicId], references: [id], onDelete: Cascade)
  videoId      String
  title        String
  thumbnailUrl String
  channelTitle String
  url          String

  @@index([subtopicId])
}

model Article {
  id         String   @id @default(cuid())
  subtopicId String
  subtopic   Subtopic @relation(fields: [subtopicId], references: [id], onDelete: Cascade)
  url        String   @unique
  title      String
  snippet    String   @db.Text

  @@index([subtopicId])
}

model Quiz {
  id         String     @id @default(cuid())
  subtopicId String
  subtopic   Subtopic   @relation(fields: [subtopicId], references: [id], onDelete: Cascade)
  difficulty String
  questions  Question[]

  @@index([subtopicId])
}

model Question {
  id            String @id @default(cuid())
  quizId        String
  quiz          Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
  question      String @db.Text
  options       String[]
  correctIndex  Int
  explanation   String @db.Text

  @@index([quizId])
}